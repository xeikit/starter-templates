{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "biome": "biome check .",
    "biome:fix": "biome check --write .",
    "biome:ci": "biome ci .",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "prettier:ci": "prettier --check --log-level warn .",
    "format": "pnpm prettier && pnpm biome",
    "format:fix": "pnpm prettier:fix && pnpm biome:fix",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "eslint:ci": "eslint . --max-warnings 0",
    "typecheck": "nuxi typecheck .",
    "lint": "pnpm eslint && pnpm biome && pnpm prettier && pnpm typecheck",
    "lint:fix": "pnpm eslint:fix && pnpm biome:fix && pnpm prettier:fix && pnpm typecheck",
    "test": "vitest run",
    "test:ui": "vitest --ui --coverage",
    "test:coverage": "vitest run --coverage",
    "generate-openapi-spec": "jiti scripts/generate-openapi-spec.ts",
    "generate-types": "pnpm generate-openapi-spec && openapi-ts && pnpm lint:fix",
    "generate-types:ci": "openapi-ts",
    "prepare": "jiti .husky/install.mts"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.5",
    "@hono/zod-validator": "^0.7.5",
    "@tanstack/vue-query": "^5.92.1",
    "consola": "^3.4.2",
    "hono": "^4.11.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@commitlint/cli": "20.1.0",
    "@commitlint/types": "20.0.0",
    "@hey-api/openapi-ts": "^0.89.0",
    "@nuxt/eslint": "^1.12.1",
    "@nuxt/test-utils": "^3.21.0",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@pinia/nuxt": "^0.11.3",
    "@pinia/testing": "^1.0.3",
    "@types/node": "^25.0.3",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "commitlint-config-gitmoji": "2.3.1",
    "eslint": "9.39.2",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "globals": "16.5.0",
    "happy-dom": "^20.0.11",
    "husky": "9.1.7",
    "jiti": "^2.6.1",
    "nuxt": "^4.2.2",
    "pinia": "^3.0.4",
    "prettier": "3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "5.9.3",
    "vitest": "^3.2.4",
    "vue": "^3.5.25",
    "vue-router": "^4.6.4",
    "vue-tsc": "^3.1.8"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "lint-staged": {
    "**/*.{js,ts,cjs,mjs,cts,mts,jsx,tsx,vue}": [
      "biome check --write --no-errors-on-unmatched",
      "eslint --fix"
    ],
    "**/*.{css,scss,sass,less,vue,md,html,yaml,yml,json,jsonc}": [
      "prettier --write"
    ]
  }
}
