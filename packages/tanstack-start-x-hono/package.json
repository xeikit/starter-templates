{
  "name": "tanstack-start-x-hono-app",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm --recursive run build",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "biome": "biome check .",
    "biome:fix": "biome check --write .",
    "biome:ci": "biome ci .",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "prettier:ci": "prettier --check --log-level warn .",
    "format": "pnpm prettier && pnpm biome",
    "format:fix": "pnpm prettier:fix && pnpm biome:fix",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "eslint:ci": "eslint . --max-warnings 0",
    "typecheck": "pnpm --recursive run typecheck",
    "lint": "pnpm eslint && pnpm biome && pnpm prettier && pnpm typecheck",
    "lint:fix": "pnpm eslint:fix && pnpm biome:fix && pnpm prettier:fix && pnpm typecheck",
    "generate-types": "pnpm --filter backend generate-types && pnpm lint:fix",
    "prepare": "jiti .husky/install.mts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@commitlint/cli": "20.1.0",
    "@commitlint/types": "20.0.0",
    "@eslint/js": "9.39.1",
    "@types/node": "24.10.1",
    "commitlint-config-gitmoji": "2.3.1",
    "consola": "3.4.2",
    "eslint": "9.39.1",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "jiti": "2.6.1",
    "lint-staged": "16.2.7",
    "prettier": "3.7.3",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0"
  },
  "packageManager": "pnpm@10.17.1"
}
