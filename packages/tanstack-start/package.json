{
  "name": "tanstack-app",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "biome": "biome check .",
    "biome:fix": "biome check --write .",
    "biome:ci": "biome ci .",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "prettier:ci": "prettier --check --log-level warn .",
    "format": "pnpm prettier && pnpm biome",
    "format:fix": "pnpm prettier:fix && pnpm biome:fix",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "eslint:ci": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm eslint && pnpm biome && pnpm prettier && pnpm typecheck",
    "lint:fix": "pnpm eslint:fix && pnpm biome:fix && pnpm prettier:fix && pnpm typecheck",
    "test": "vitest run",
    "test:ui": "vitest --ui --coverage",
    "test:coverage": "vitest run --coverage",
    "prepare": "jiti .husky/install.mts"
  },
  "dependencies": {
    "@tanstack/react-router": "^1.132.47",
    "@tanstack/react-start": "^1.132.52",
    "@vitejs/plugin-react": "^5.0.4",
    "consola": "^3.4.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "vite": "^7.1.9"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@commitlint/cli": "19.8.1",
    "@commitlint/types": "19.8.1",
    "@eslint/js": "9.37.0",
    "@types/eslint-plugin-tailwindcss": "3.17.0",
    "@types/node": "^24.7.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "commitlint-config-gitmoji": "2.3.1",
    "eslint": "9.37.0",
    "eslint-plugin-tailwindcss": "3.18.2",
    "globals": "16.4.0",
    "happy-dom": "^18.0.1",
    "husky": "9.1.7",
    "jiti": "^2.6.1",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "lint-staged": {
    "**/*.{js,ts,cjs,mjs,cts,mts,jsx,tsx}": [
      "biome check --write --no-errors-on-unmatched",
      "eslint --fix"
    ],
    "**/*.{css,scss,sass,less,md,html,yaml,yml,json,jsonc}": [
      "prettier --write"
    ]
  }
}
