{
  "name": "tanstack-app",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "biome": "biome check .",
    "biome:fix": "biome check --write .",
    "biome:ci": "biome ci .",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "prettier:ci": "prettier --check --log-level warn .",
    "format": "pnpm prettier && pnpm biome",
    "format:fix": "pnpm prettier:fix && pnpm biome:fix",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "eslint:ci": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm eslint && pnpm biome && pnpm prettier && pnpm typecheck",
    "lint:fix": "pnpm eslint:fix && pnpm biome:fix && pnpm prettier:fix && pnpm typecheck",
    "test": "vitest run",
    "test:ui": "vitest --ui --coverage",
    "test:coverage": "vitest run --coverage",
    "prepare": "jiti .husky/install.mts"
  },
  "dependencies": {
    "@tanstack/react-router": "1.143.2",
    "@tanstack/react-start": "1.143.2",
    "@vitejs/plugin-react": "5.1.2",
    "consola": "3.4.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "vite": "7.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@commitlint/cli": "20.2.0",
    "@commitlint/types": "20.2.0",
    "@eslint/js": "9.39.2",
    "@types/node": "25.0.3",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "autoprefixer": "10.4.23",
    "commitlint-config-gitmoji": "2.3.1",
    "eslint": "9.39.2",
    "globals": "16.5.0",
    "happy-dom": "20.0.11",
    "husky": "9.1.7",
    "jiti": "2.6.1",
    "postcss": "8.5.6",
    "prettier": "3.7.4",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.1",
    "vite-tsconfig-paths": "6.0.3",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "lint-staged": {
    "**/*.{js,ts,cjs,mjs,cts,mts,jsx,tsx}": [
      "biome check --write --no-errors-on-unmatched",
      "eslint --fix"
    ],
    "**/*.{css,scss,sass,less,md,html,yaml,yml,json,jsonc}": [
      "prettier --write"
    ]
  }
}
